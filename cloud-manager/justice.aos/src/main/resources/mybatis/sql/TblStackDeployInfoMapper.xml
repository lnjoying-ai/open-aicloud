        FROM
        ( SELECT spec_id, spec_name, image_names, replica_num, user_id, bp_id, stack_type, create_time, update_time
          FROM tbl_stack_spec_info
        <where>
            <if test="statusExcludeCollection != null and statusExcludeCollection.size() > 0">
